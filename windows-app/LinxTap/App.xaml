<Application x:Class="LinxTap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Modern Terminal Color Scheme -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="CardBrush" Color="#252526"/>
        <SolidColorBrush x:Key="TextBrush" Color="#d4d4d4"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#858585"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4ec9b0"/>
        <SolidColorBrush x:Key="BlueBrush" Color="#569cd6"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#0e639c"/>
        <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1177bb"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3e3e3e"/>
        <SolidColorBrush x:Key="FocusBrush" Color="#007acc"/>
    </Application.Resources>
</Application>
